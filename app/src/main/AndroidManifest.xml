<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.minnloft.checkmyfluids" >


    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <supports-screens
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="false"
        android:xlargeScreens="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main_menu"
            android:theme="@style/MainMenuTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LogFluidsActivity"
            android:label="@string/title_activity_log_fluids"
            android:theme="@style/LogFluidsTheme"
            android:screenOrientation="portrait"
            android:parentActivityName="com.minnloft.checkmyfluids.MainActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
            android:value="com.minnloft.checkmyfluids.MainActivity" />

        </activity>
        <activity
            android:name=".StatisticsActivity"
            android:label="@string/title_activity_statistics"
            android:theme="@style/StatisticsTheme"
            android:screenOrientation="portrait"
            android:parentActivityName="com.minnloft.checkmyfluids.MainActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.minnloft.checkmyfluids.MainActivity" />

        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/SettingsTheme"
            android:screenOrientation="portrait">
        </activity>


        <receiver android:name="com.minnloft.checkmyfluids.notifications.ReminderReceiver">
        </receiver>

        <receiver android:name="com.minnloft.checkmyfluids.notifications.ReminderSetter" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

</application>

</manifest>
