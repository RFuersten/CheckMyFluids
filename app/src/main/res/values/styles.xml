<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="colorAccent">@color/AccentColor</item>
        <item name="android:windowBackground">@color/WindowBackground</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="colorControlNormal">@color/AccentColor</item>
        <item name="colorControlActivated">@color/AccentColor</item>
        <item name="colorControlHighlight">@color/AccentColor</item>

    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/AccentColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:buttonBarButtonStyle">@style/DialogButtonTextColorStyle</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="DialogButtonTextColorStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/AccentColor</item>
    </style>

    <!-- Main Menu activity theme. -->
    <style name="MainMenuTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Log Fluids activity theme. -->
    <style name="LogFluidsTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActivityActionBar</item>
    </style>

    <!-- Log Entry activity theme. -->
    <style name="LogEntryTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActivityActionBar</item>
    </style>

    <!-- Statistics activity theme. -->
    <style name="StatisticsTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActivityActionBar</item>
    </style>

    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActivityActionBar</item>
    </style>

    <!-- Style for the Log Fluids and Statistics Action Bars -->
    <style name="ActivityActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:windowContentOverlay">@null</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- Divider for Statistics page -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>
