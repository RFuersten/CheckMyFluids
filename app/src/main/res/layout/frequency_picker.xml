<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/popup_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginBottom="15dp"
        android:textAppearance="?android:textAppearanceSearchResultTitle"
        android:background="@color/ColorPrimary"
        android:textColor="@color/IconsAndTextHeaders"
        android:gravity="center"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dialog_horizontal_margin"
        android:layout_marginRight="@dimen/dialog_horizontal_margin"
        android:layout_marginBottom="15dp"
        android:gravity="center" >


        <NumberPicker
            android:id="@+id/frequency_number_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="@string/dialog_frequency_picker_days"
            android:layout_gravity="center_vertical"/>


    </LinearLayout>

</LinearLayout>